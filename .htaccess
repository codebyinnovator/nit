RewriteEngine On

# Remove .php or .html from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.(php|html)$ -f
RewriteRule ^(.*)$ $1.$2 [L]

# Redirect to clean URL (SEO-friendly)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s(.*)\.(php|html)[\s?] [NC]
RewriteRule ^(.*)\.(php|html)$ /$1 [R=301,L]
